<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="de.remk0.shopshopviewer"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application android:name=".ShopShopViewerApplication" android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".ShopShopViewerActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.dropbox.client2.android.AuthActivity"
                  android:launchMode="singleTask"
                  android:configChanges="orientation|keyboard">
            <intent-filter>
            <!-- Change this to be db- followed by your app key -->
                <data android:scheme="db-iqo7fg98tfzhyb3" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
        
</manifest>